    "directory": "packages/i2e-firewall"
  },
  "bugs": {
    "url": "https://github.com/aigrc/aigrc/issues"
  },
  "keywords": [
    "aigrc",
    "ai-governance",
    "i2e",
    "supply-chain-firewall",
    "policy-enforcement",
    "sarif",
    "compliance"
  ],
  "engines": {
